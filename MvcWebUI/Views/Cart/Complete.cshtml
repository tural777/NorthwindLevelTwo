@model ShippingDetailsViewModel

<div asp-validation-summary="ModelOnly"></div>

<form asp-controller="cart" asp-action="complete" method="post">
    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.FirstName"></label>
        <input asp-for="@Model.ShippingDetail.FirstName" class="form-control" placeholder="Name" />
        <span asp-validation-for="@Model.ShippingDetail.FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.LastName"></label>
        <input asp-for="@Model.ShippingDetail.LastName" class="form-control" placeholder="Surname" />
        <span asp-validation-for="@Model.ShippingDetail.LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.Email"></label>
        <input asp-for="@Model.ShippingDetail.Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="@Model.ShippingDetail.Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.Address"></label>
        <input asp-for="@Model.ShippingDetail.Address" class="form-control" placeholder="Address" />
        <span asp-validation-for="@Model.ShippingDetail.Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.City"></label>
        <input asp-for="@Model.ShippingDetail.City" class="form-control" placeholder="City" />
        <span asp-validation-for="@Model.ShippingDetail.City"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShippingDetail.Age"></label>
        <input asp-for="@Model.ShippingDetail.Age" class="form-control" placeholder="Age" />
        <span asp-validation-for="@Model.ShippingDetail.Age"></span>
    </div>

    <input type="submit" class="btn btn-success" value="Submit" />
</form>